landingzone = {
  backend_type        = "azurerm"
  global_settings_key = "{{ tfstates.launchpad.lz_key_name }}"
  level               = "level1"
  key                 = "{{ tfstates.eslz.lz_key_name }}"
  tfstates = {
    {{ tfstates.launchpad.lz_key_name }} = {
      level   = "lower"
      tfstate = "{{ tfstates.launchpad.tfstate }}"
    }
    {{ tfstates.management.lz_key_name }} = {
      level   = "current"
      tfstate = "{{ tfstates.management.tfstate }}"
    }
{% if config.platform_identity.azuread_identity_mode != 'logged_in_user' %}
    {{ tfstates.platform_subscriptions.lz_key_name }} = {
      level   = "current"
      tfstate = "{{ tfstates.platform_subscriptions.tfstate }}"
    }
{% endif %}
{% if config.platform_identity.azuread_identity_mode != 'logged_in_user' %}
    {{ tfstates.identity.lz_key_name }} = {
      level   = "current"
      tfstate = "{{ tfstates.identity.tfstate }}"
    }
{% endif %}
  }
}
